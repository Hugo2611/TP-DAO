<Window x:Class="ClientDAO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client DAO - TCP/IP" Height="500" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Serveur:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtHost" Text="localhost" Width="100" Margin="5"/>
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtPort" Text="8888" Width="60" Margin="5"/>
            <Button x:Name="btnConnexion" Content="Tester Connexion" Width="120" Margin="5" Click="btnConnexion_Click"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <Button x:Name="btnCreerAlbum" Content="Créer Album" Width="100" Margin="5" Click="btnCreerAlbum_Click"/>
            <Button x:Name="btnLireAlbums" Content="Lire Albums" Width="100" Margin="5" Click="btnLireAlbums_Click"/>
            <Button x:Name="btnCreerDessin" Content="Créer Dessin" Width="100" Margin="5" Click="btnCreerDessin_Click"/>
            <Button x:Name="btnLireDessins" Content="Lire Dessins" Width="100" Margin="5" Click="btnLireDessins_Click"/>
        </StackPanel>
        
        <ListBox Grid.Row="2" x:Name="listBoxResultats" Margin="10"/>
        
        <TextBox Grid.Row="3" x:Name="txtStatus" IsReadOnly="True" Margin="10" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
