<Window x:Class="WPFApp.FormLogEvents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogEvents Monitor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Informations:" Margin="5"/>
            <TextBlock x:Name="txtNbInfos" Text="0" Margin="5" FontWeight="Bold"/>
            <TextBlock Text="Alertes:" Margin="15,5,5,5"/>
            <TextBlock x:Name="txtNbAlertes" Text="0" Margin="5" FontWeight="Bold" Foreground="Orange"/>
            <TextBlock Text="Alarmes:" Margin="15,5,5,5"/>
            <TextBlock x:Name="txtNbAlarmes" Text="0" Margin="5" FontWeight="Bold" Foreground="Red"/>
            <TextBlock Text="Perdus:" Margin="15,5,5,5"/>
            <TextBlock x:Name="txtNbPerdus" Text="0" Margin="5" FontWeight="Bold" Foreground="Gray"/>
        </StackPanel>
        
        <ListBox Grid.Row="1" x:Name="listBoxEvents" Margin="10"/>
    </Grid>
</Window>
